                        <td>{{ classe.numeroClasse }}</td>
                        <td>{{ classe.nbEleves }}</td>
                        <td>{{ classe.moyenneClasse }}</td>
                        {# <td><a href="{{ path('classe_get_one', { 'id' : classe.id } ) }}">Afficher</a></td> #}
                        {# <td><a href="{{ path('classe_edit', { 'id' : classe.id } ) }}">Modifier</a></td> #}
                        {# <td><a href="{{ path('classe_delete', { 'id' : classe.id } ) }}">Supprimer</a></td> #}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
</div>
{% endblock %}

