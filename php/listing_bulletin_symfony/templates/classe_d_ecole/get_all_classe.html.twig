{% block title %}Accueil{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Gestion des Classes d'ecole</h1>

        <a href="{{ path('classe_add') }}">Ajouter une classe</a>

        <table class='table'>
            <thead>
                <tr>
                    <th>Numéro de classe</th>
                    <th>Nombres d'élèves dans une classe</th>
                    <th>Moyenne des classe</th>
                    <th>Afficher</th>
                    <th> Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody class='tbody'>
                {%  for classe in classes %}
