{% extends "base.html.twig" %}

{% block title 'Modifier un espace de stockage' %}

{% block body %}
<div class="form_container">

    <h1>Modifier une categorie d'un ticket</h1>

    {{ form_start(formTicket, { 'attr' : { 'class' : 'form' }} ) }}

        
        <div class="form_group">

            <div class="form-error">
                {{ form_errors(formTicket.category) }}
            </div>

            <label for="inputType">Categorie : </label>

            <div>
                {{ form_widget(formTicket.category, {attr : {class : 'form_control' }} ) }}
            </div>
            
            <small>{{ form_errors(formTicket.category) }} </small>

        </div>

        <button type="submit" class="btn_submit">Modifier</button>

    {{ form_end(formTicket) }}</div>
{% endblock body %}